#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "🧪 Running tests before push..."
if ! yarn test; then
  echo "❌ Tests failed — push aborted"
  exit 1
fi

echo "📦 Building project..."
if ! yarn build; then
  echo "❌ Build failed — push aborted"
  exit 1
fi

echo "✅ All checks passed — pushing allowed"
